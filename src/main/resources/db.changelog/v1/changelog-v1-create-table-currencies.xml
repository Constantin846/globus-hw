<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1-3" author="Author">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="currencies"/>
            </not>
        </preConditions>

        <createTable tableName="currencies">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="char_code" type="varchar(3)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="vunit_rate" type="numeric(20,10)"/>
            <column name="create_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>