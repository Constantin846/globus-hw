					"        const chars = str.split('');\r",
					"        const digits = chars.map(char => {\r",
					"            const codeStr = char.charCodeAt(0);\r",
					"            return BigInt(codeStr);\r",
					"        });\r",
					"        const allDigits = [].concat(...digits);\r",
					"        let sum = allDigits.reduce((acc, digit) => acc + digit, BigInt(0));\r",
					"        const multiplier = BigInt(\"8232323433324765857\");\r",
					"        sum *= multiplier;\r",
					"        return String(sum);\r",
					"    }\r",
					"    const encodedPassword = encodePassword(password);\r",
					"    pm.request.headers.add({ key: 'X-Password', value: encodedPassword });\r",
					"    pm.request.headers.add({ key: 'X-User-Email', value: userEmail });\r",
					"}\r",
